# Environment Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# MongoDB Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/betnad?authSource=admin
MONGODB_DATABASE=betnad

# CORS Configuration
CORS_ORIGIN=http://localhost:4000

# Twitter API Credentials (v1.1 - Required for existing functionality)
# Get these from https://developer.twitter.com/
X_APP_KEY=your_twitter_app_key_here
X_APP_SECRET=your_twitter_app_secret_here
X_USER_ACCESS_TOKEN=your_user_access_token_here
X_USER_ACCESS_SECRET=your_user_access_secret_here
X_BOT_USER_ID=your_bot_user_id_here

# Twitter OAuth 2.0 Credentials (Required for login with X)
# Get these from https://developer.twitter.com/
X_CLIENT_ID=your_twitter_client_id_here
X_CALLBACK_URL=http://localhost:4000/callback
SESSION_SECRET=your_session_secret_change_me

# Twitter Bot Settings (Optional)
MENTION_POLLING_INTERVAL=20000
MAX_MENTION_RESULTS=100

# Privy Configuration (Optional)
# Get these from https://privy.io/
PRIVY_APP_ID=your_privy_app_id_here
PRIVY_APP_SECRET=your_privy_app_secret_here

# Gas Tank Configuration
GAS_TANK_PRIVATE_KEY=your_gas_tank_private_key_here
GAS_TANK_AMOUNT=0.1
GAS_TANK_RPC_URL=https://testnet-rpc.monad.xyz
